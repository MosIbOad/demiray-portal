<header class="py-3">
      <div class="container">
        <div class="row g-0">
          <div class="col-sm-12 d-flex justify-content-between align-items-center" @mouseleave="userMenu = false"><img onclick="window.location.href='/'" style="cursor: pointer;" src="/assets/images/logo.png" alt="" class="header-logo">
            {{#if (not isLogged)}}
            <div class="buttons d-flex align-items-center gap-2"><button onclick="window.location.href='/login'" class="btn login-btn"><i class="fa-solid fa-right-to-bracket"></i></button><button class="btn new-account-btn" onclick="window.location.href='/register'"><i class="fa-solid fa-user-plus"></i></button></div>
            {{/if}} 
            {{#if isLogged}}
              
              
             <div class="buttons d-flex align-items-center gap-2 user-menu" >
              <button @click="userMenuActive" class="btn login-btn btn-user" @mouseover="userMenu = true"><i class="fa-solid fa-user"></i></button>
              <button class="btn new-account-btn" onclick="window.location.href='/basket'"><i class="fa-solid fa-basket-shopping"></i></button>

              <div class="card user-menu-content" style="width: 10rem;" v-show="userMenu" @mouseleave="userMenu = false"> 
              <ul class="list-group list-group-flush" @mouseleave="userMenu = false">
              <li class="list-group-item" @click="redirectProfile">Profil</li>
              {{#if isAdmin}}
              <li class="list-group-item" @click="redirectPanel">Panel</li>
              {{/if}}
              <li class="list-group-item" @click="exitUser">Çıkış</li>
             </ul>
             </div>
             </div>
            {{/if}}
          </div>
        </div>
      </div>
